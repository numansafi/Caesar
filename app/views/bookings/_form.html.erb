<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
    <h1>New Booking</h1>
<%= simple_form_for [ @venue,@booking ] do |f| %>
  <%= f.input :number_of_people, html5: true, label: 'Party Size' %>
  <%= f.input :start_date_time, as: :time, html5: true, label: 'Time' %>
  <%= f.input :start_date_time, as: :date, html5: true, label: 'Date'  %>
  <%= f.submit 'Create Booking', class: 'btn-gradient'%>
<% end %>
    </div>
  </div>
</div>
