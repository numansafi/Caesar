  <div class="row justify-content-center mt-5">
    <div class="col-xs-12 col-sm-6 col-sm-offset-6">
      <div class="form-booking">
        <h2>New Booking</h2>
        <%= simple_form_for [ @venue,@booking ], defaults: { required: false } do |f| %>
          <%= f.input :number_of_people, html5: true, label: "Party Size" %>
          <%= f.input :time, html5: true, label: 'Time'  %>
          <%= f.input :date, html5: true, input_html: {class: "datepicker"},label: 'Date'  %>
          <%= f.submit 'Create Booking', class: 'purple-button', id: "sweet-alert-demo" %>
        <% end %>
      </div>
    </div>
  </div>
