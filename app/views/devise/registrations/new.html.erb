<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-6 col-m-6 col-sm-offset-6">
      <div class="form-login">
        <h2>Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), defaults: { required: false }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :first_name,
                    input_html: { autocomplete: "first-name" } %>
            <%= f.input :last_name,

                      input_html: { autocomplete: "last-name" } %>
            <%= f.input :username,
                      required: false %>
            <%= f.input :email,

                        autofocus: true,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,

                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,

                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :avatar, label: "Photo", as: :file %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class: "mt-3 orange-button" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
              </div>
    </div>
  </div>
</div>
