<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "https://cdn-icons-png.flaticon.com/512/4802/4802121.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to request.base_url, class: "nav-link purple-button" do %>
            <span>Home</span>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "#", class: "nav-link orange-button" do %>
          <span>Text</span>
          <% end %>
        </li>
        <li class="nav-item dropdown">

          <% if current_user.avatar.attached? %>
            <%= cl_image_tag current_user.avatar.key , class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= cl_image_tag "images_aqhfrv", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Bookings", my_bookings_path, class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to new_user_session_path, class: "purple-button"  do %>
          <span>login</span>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_user_registration_path, class: "orange-button" do %>
          <span>sign up</span>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
